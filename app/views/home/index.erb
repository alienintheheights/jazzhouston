<!-- Stage for home page -->

<div id="StageHome" >


  <%= render :partial => "common/notice" %>


  <div class="inside span12">
	<!-- START CD List -->
	<div class="span2" id="jh_cds">
	  <h2>New CDs</h2>
	  <%for item in albums%>
		<ul class="thumbnails">
		  <li class="span12">
			<div class="home-cd-thumb thumbnail">
			  <% if !item.image_url.nil? && !item.image_url.blank?  %>
				<a href="/releases/about/<%=item.album_id%>"><img src="<%=item.image_url%>"></a>
			  <% end %>
			  <br/><b><%= link_to item.title, {:action => "about", :controller=>"releases",  :id=>item.album_id} %></b>
			  <p><%=item.artist_name%></p>
			</div>
		  </li>
		</ul>
	  <% end %>
	  <br/>
	</div>
	<!-- END CD List -->

	<div class="span10">
	  <div class="row-fluid">

		<!-- Shows and Forums -->
		<div class="span6 home_middle_column">

		  <!-- START Shows -->
		  <div class="row-fluid">
			<div class="span12" id="jh_shows">

			  <h2 id="show_listing_header">Appearing Today</h2>
			  <div class="hspacer"></div>
			  <div id="show_listing">

				<% for item in shows_today %>
				  <% if item.event_type_id==1 %>
					<i class="icon-star" rel="tooltip" data-toggle="tooltip" data-placement="top" data-original-title="One-Night Only" style="padding-right: 5px;"></i>
				  <% else %>
					<i class="icon-refresh"  rel="tooltip" data-toggle="tooltip" data-placement="top" data-original-title="Weekly Engagement" style="padding-right: 5px;"></i>
				  <% end %>
				  <a id="show-<%=item.event_id%>" href="/events/details/<%=item.event_id%>" rel="tooltip" data-toggle="tooltip" data-placement="top" data-original-title="<%=item.venue.title%>"><%=item.performer%></a>

				  <% if item.venue %>
				  <% end %>
				  <div class='hspacer'></div>
				<% end %>
				<a class="blueLink" href="/events/shows">See more upcoming shows...</a>
			  </div>

			</div>
		  </div>
		  <!-- END Shows-->

		  <!-- START Forums -->
		  <div class="row-fluid">
			<div class="span12" id="forum_listing">
			  <div class="hspacer"></div>
			  <h2>Forum Chatter</h2>
			  <% for post in topic_list %>

				  <%= render :partial => "common/renderpic", :locals => { :user => post.user, :size =>"60"} %>


				  <a class="forum-row-home" href="/forums/messages/<%=post.thread_id%>"><%= truncate(post.title, :length => 40) %></a>
				  <% if !post.user.nil? %>
					<small>
					  <br/><span class="badge badge-info"><%= post.post_count-1 %></span>
					  last post <%=distance_of_time_in_words(Time.now, post.modified_date)%> ago
					</small>
				  <% end %>
				  <div class="hspacer"></div>

			  <% end %>
			</div>
		  </div>
		  <!-- END Forums -->
		</div>

		<!-- START News Rotator  -->
		<div class="span6">

		  <div id="news-carousel" class="span12" >
			<h2>What's Up?</h2>
			<div  id="news-carousel-div">
			  <%
				 link_array = []
				 first = true
				 for item in articles
				   current_id= (item.sub_title && item.sub_title.length>0)? item.sub_title : item.content_id
				   link_array.push(link_to item.title, {:action => "words", :controller=>"articles",  :id=>current_id})
				   next if !item.photo.exists?
			  %>
				<div>
				  <h4><%= link_to item.title, {:action => "words", :controller=>"articles",  :id=>current_id} %></h4>
				 <%= link_to image_tag(item.photo.url(:thumb), :width=>"120", :align=>"left", :class=>"img-polaroid home_news_pic", :title=>item.title, :alt=>item.title), {:action => "words", :controller=>"articles",  :id=>current_id} %>
				  <div class="home_news_teaser">
					<%= item.teaser %>
				  </div>
				</div>
			  <%end %>
			</div>
		  </div>

		  <div class="hspacer"></div>
		</div>
	  </div>
	  <!-- END News Rotator  -->

	</div>

	<div class="row-fluid">
	  <!-- START About JH -->
	  <div class="span12">
		<h2>About Jazz(in)Houston</h2>
		<div class="hspacer"></div>
		<%= render :partial => "/common/about"%>
		On JazzHouston you will find <a href="/events">upcoming shows</a>,
		<a href="/musicians">local players</a>, <a href="/releases">CDs releases</a>, <a href="/education">Jazz Education</a>
		opportunities, and much more. This site is a community effort that has been online since 1995.

	  </div>
	  <!-- END About JH -->
	</div>
  </div>



</div> <!-- end Stage -->




