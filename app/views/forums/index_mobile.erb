<div id="StageNarrow">




  <div class="forum-inside">

<span style="padding: 2px 5px;">
  <%=number_with_delimiter(@totalPosts)%> forum posts and still going...
</span>
    <br/>
    <div class="board-pager" >
      <%= render :partial => "pager", :locals => { :page => @page, :board => @board}%>
    </div>
    <div class="forumNewTopicLink">
      <% if logged_in? %>
          <% if @board.nil? %>
              <%= link_to "+new topic", {:action => "new", :controller=>"forums", :class=>"newTopic"} %>
          <% else %>
              <%= link_to "+new topic", {:action => "new", :controller=>"forums", :board_id=> @board.board_id}, :class=>"newTopic" %>
          <% end %>
      <% end %>
    </div>

    <%
       has_bans=(@ban_list && @ban_list.length>0) || false
       for item in @threads
           page_num = item.post_count>@pp? 1+((item.post_count-1)/@pp).floor : 1
           next if (has_bans && item.monologue_flag==1 && @ban_list.has_key?(item.user_id))
    %>
        <div class="forumThreadBox">
          <div class="forumAvatarBox">
            <div class="forumListPic">
              <%= render :partial => "common/renderpic", :locals => { :user => item.user, :size =>"75"} %>
            </div>
            <div class="forumMetaInfo">
              <a class="smallForumLink" href="/members/profile/<%=item.author%>"><%= item.author.downcase %></a>

              <div class="forumPostTime">
                <%=distance_of_time_in_words(Time.now, item.modified_date)%> ago
              </div>
            </div>
          </div>
          <div class= "bigForumLink">
            <a href="/forums/messages/<%=item.thread_id%>?fpage=<%=@page%>"><%= truncate(item.title, :length => 70) %></a>
            <br/><a class="smallForumLink" style="margin-top:12px;" href="/forums/messages/<%=item.thread_id%>?page=<%=page_num%>#<%= item.post_count %>"><%= item.post_count-1 %> comment<% if item.post_count-1 != 1 %>s<% end %></a>
          </div>
        </div>

    <% end %>
    <div class="hspacer"></div>
    <div class="board-pager">
      <div  style="float:left;padding: 0 25px;">
        Page <%= @page %>
      </div>
      <div style="float:right;">
        <% if @page > 1 %>
            <%= link_to "previous", {:action => "index", :controller=>"forums", :page=>(@page-1)} %> |
        <% end %>
        <%= link_to "next", {:action => "index", :controller=>"forums", :page=>(@page+1)} %>
      </div>
    </div>
    <div class="hspacer"></div>

  </div>
</div>
