<div id="StageNarrow">
  <div class="inside">
    ><a href="/home">Home</a>><a href="/forums">Forums</a>>Recent Activity
    <div class="hspacer"></div>

    <div class="boardList">
      <% counter=0
         for board in @boards %>
          <% if counter>0 %> | <% end %>  <%= link_to board.title, {:action => "threads", :controller=>"forums", :id=>board.board_id} %>

      <% counter=counter+1
         end %>
    </div>

    <div class="hspacer"></div>
    <div class="board-pager">
      <div  style="float:left;">
        <% if logged_in? %>
            <%= link_to "New Topic", {:action => "new", :controller=>"forums", :class=>"newTopic"} %>
        <% else %>
            Sign on or <a href="/members/new">sign up</a> to participate.
        <% end %>
        <div class="hspacer"></div>
      </div>
      <div style="float:right;">
        <% if @page > 1 %>
            <%= link_to "previous", {:action => "index", :controller=>"forums", :page=>(@page-1)} %> |
        <% end %>
        <%= link_to "next", {:action => "index", :controller=>"forums", :page=>(@page+1)} %>
      </div>
    </div>


     <div class="forumthreadbox">
      <div class="forumListPic">
        <%= render :partial => "common/renderpic", :locals => { :user => item.user, :size =>"48"} %>
      </div>

      <a class="smallForumLink" href="/members/profile/<%=item.author%>"><%= item.author.downcase %></a>

      <div class="forumPostTime">
        <%=distance_of_time_in_words(Time.now, item.modified_date)%> ago

      </div>
      <br/>

      <div class= "bigForumLink">
        <a href="/forums/messages/<%=item.thread_id%>?fpage=<%=@page%>"><%= truncate(item.title, :length => 85) %></a> (<a class="num" href="/forums/messages/<%=item.thread_id%>?page=<%=page_num%>#<%= item.post_count %>"><%= item.post_count-1 %></a>)
      </div>
    </div>

    <div class="hspacer"></div>
    <div class="board-pager">
      <div  style="float:left;padding: 0 25px;">
        Page <%= @page %>
      </div>
      <div style="float:right;">
        <% if @page > 1 %>
            <%= link_to "previous", {:action => "index", :controller=>"forums", :page=>(@page-1)} %> |
        <% end %>
        <%= link_to "next", {:action => "index", :controller=>"forums", :page=>(@page+1)} %>
      </div>
    </div>
    <div class="hspacer"></div>

  </div>
</div>
