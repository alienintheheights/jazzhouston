
<div data-role="panel" id="left-panel" data-display="overlay" data-position="left" data-theme="c">

  <ul data-role="listview" data-theme="d" data-icon="false">
	<li data-icon="delete"><a href="#" data-rel="close">Close</a></li>

	<% if user_signed_in? %>
	  <li data-role="list-divider">Welcome <%=current_user.first_name%></li>
	  <li><%= render :partial => "common/renderpic", :locals => { :user => current_user, :size =>"40"} %><a href="/members/profile/<%=current_user.username%>">Profile</a></li>
	  <li><a href="/members/edit/<%=current_user.user_id%>">Settings</a></li>
	  <li><a data-ajax="false" href="/members/logout/<%=current_user.username%>">Sign Out</a></li>
	  <% if current_user.admin_flag==1 %>
		<li data-role="list-divider">Site Editors</li>
		<li><a rel="external" href="/site/toggle?t=desktop">click to use non-mobile version.</a> </li>
	  <% end %>
	  </ul>
	<% else %>
	  </ul>
	  <%= form_tag "/members/login", :html=>{:class=>"form-inline"}, "data-ajax"=>false do -%>
		<div data-role="fieldcontain" class="ui-hide-label">
		  <label for="login">Username:</label>
		  <input type="text" name="login" id="login" value="" placeholder="Username"/>
		</div>
		<div data-role="fieldcontain" class="ui-hide-label">
		  <label for="password">Password:</label>
		  <input type="password" id="password" name="password" placeholder="Password">
		</div>

		<label class="checkbox">
		  <input type="checkbox" name="remember_me" checked>Stay Logged-in
		</label>
		<%= submit_tag 'Sign In', :class=>"btn" %>
	   <% end %>

		<a href="/members/sendlostpasswordemail">Forgot your password?</a>
		<br/><br/>
		<a href="/members/new">Sign-Up</a>


	<% end %>
	 <br/><br/>
	<ul data-role="listview" data-theme="d" data-icon="false">
	    <li data-role="list-divider">Site View</li>
	  <% if cookies[:prefer_full_site].blank? %>
		<li><a rel="external" href="/site/toggle?t=desktop">Switch to the non-mobile version</a> </li>
	  <% end %>
	</ul>

	</div><!-- /panel -->

<div data-role="footer" data-position="fixed">
  <div data-role="navbar">
	<ul>
	  <li> <a data-icon="home" href="/home/mobile">Home</a></li>
	  <li><a data-icon="star" href="/events/">Shows</a></li>
	  <li><a data-ajax="false" data-icon="grid" href="/forums/">Forums</a></li>
	  <li><a data-icon="info" href="/musicians/">Players</a></li>
	</ul>
  </div>

</div><!-- /footer -->

