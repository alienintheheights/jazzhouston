<div data-role="content">


  <% for item in @articles
	   current_id= (item.sub_title && item.sub_title.length>0)? item.sub_title : item.content_id
  %>
	<div data-role="collapsible" data-content-theme="b">
	  <h3>
		<% if !item.image_url.blank?  %>
		  <%= link_to image_tag(item.image_url, :width=>'70', :height=>'70',:align=>'left',:hspace=>'2', :title=>item.title, :alt=>item.title), {:action => "words", :controller=>"articles", :id=>current_id, :type=>@section_id, :page=>@page} %>
		<% ekse %>
		  <%= image_tag item.photo_.url(:thumb), :align=>"left", :width=>'70',:hspace=>'2' %>
		<% end %>
		<%= link_to item.title, {:action => "words",  :id=>current_id, :type=>@section_id, :page=>@page}, :class=>"blueLink"%>
	  </h3>
	  <p><%=item.teaser %><br/>
		<%= link_to "More...", {:action => "words", :controller=>"articles", :id=>current_id, :type=>@section_id, :page=>@page} %>
	  </p>
	</div>
  <% end %>
</div>

