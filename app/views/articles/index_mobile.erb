<div id="StageNarrow">

  <div class="home-inside">



    <div class="contentTypeList">
      <a <% if @sectionId=="1" %>class="selected"<%end%> href="/articles/">Headlines</a> |
      <a <% if @sectionId=="6" %>class="selected"<%end%> href="/articles/reviews">Reviews</a> |
      <a <% if @sectionId=="5" %>class="selected"<%end%> href="/articles/artists">Interviews</a> |
      <a <% if @sectionId=="3" %>class="selected"<%end%> href="/articles/opinions">Opinion</a>
    </div>
    <%if logged_in? && current_user.editor_flag==1 -%>
        <a href="/articles/new"><img src="/images/icons/reply.png" border="0" alt="edit">New Article</a>
    <% end -%>
    <table class="index-single-column">
      <% for item in @articles
             current_id= (item.sub_title && item.sub_title.length>0)? item.sub_title : item.content_id
      %>
          <tr>
            <td>
              <%= link_to item.title, {:action => "words",  :id=>current_id, :type=>@type, :sectionId=>@id, :page=>@page}%>
              <% if item.display_date && item.author && item.author.downcase!="press release" %>
                  <br/>
                <span class="smallText">
                 by <a href="/members/profile/<%=item.author_id%>"><%= item.author %></a>, posted: <%= item.display_date.strftime("%b %d, %Y") %>
                </span>
              <% end %>
              <br/> <br/>
              <% if item.image_url && !item.image_url.blank?  %>
                  <%= link_to image_tag(item.image_url,:width=>'70', :height=>'70',:align=>'left',:hspace=>'2', :title=>item.title, :alt=>item.title), {:action => "words", :controller=>"articles", :id=>current_id, :type=>@type, :sectionId=>@id, :page=>@page} %>
              <% end %>
              <%=item.teaser %>
            </td>
          </tr>
      <% end %>
    </table>

    <div class="board-pager">
      <%= render :partial => "pager", :locals => {:totalPages =>@totalPages, :page => @page, :id => @id, :type => @type}%>
    </div>
  </div>
</div>
