<% if total_pages > 1  %>
    <ul class="board-pager">
      <li>page: <%= link_to "1", {:action => "index", :controller=>"articles", :type=>@section_id, :page=>1} %></li>
      <% sidx = (page>4)?page-3:2;
         for i in (sidx..page)
             if (i==page)  %>
             <li><%= link_to i, {:action => "index", :controller=>"articles", :type=>@section_id,  :page=>i}, :class=>"selected" %></li>
          <% else %>
              <li><%= link_to i, {:action => "index", :controller=>"articles", :type=>@section_id,  :page=>i} %></li>
          <% end  %>
      <% end %>
      <% if page < total_pages %>
          <li><%= link_to " more", {:action => "index", :controller=>"articles",:type=>@section_id, :page=>@page+1} %></li>
      <% end %>
    </ul>
<% end %>